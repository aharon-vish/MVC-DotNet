
<div class="container text-center" id="login">
    <div class="row">
        <div class="col-md-12">
            <div class="pr-wrap">
            </div>
            <div class="wrap">
                <p class="form-title-login">
                    Sign In
                </p>


                <form  method="post" ng-app="Login" ng-submit="Login()" class="login" novalidate name="loginForm" role="form"
                      ng-model="Login" ng-controller="validateCtrl">
                    <br/>
                    <div data-ng-cloak id="error">
                        <span>{{errors}}</span>
                    </div>
                        <input  placeholder="Enter User Store" ng-focus="hasFocusStoreName=false" type="text"
                               ng-model="LoginData.StoreName"
                               name="StoreName" required autocomplete="off" />

                    <div data-ng-cloak id="error">
                        <span ng-show="loginForm.StoreName.$dirty && loginForm.StoreName.$invalid">
                            <span ng-show="loginForm.StoreName.$error.required">User Store is required.</span>
                        </span>
                    </div>

                        <input placeholder="Enter password"
                               ng-focus="hasFocusPassword=false" type="password" ng-model="LoginData.Password"
                               name="Password" required />

                    <div data-ng-cloak id="error">
                        <span ng-show="loginForm.Password.$dirty && loginForm.Password.$invalid">
                            <span ng-show="loginForm.Password.$error.required">Password is required.</span>
                        </span>
                    </div>

                        <input type="submit" value="Sign In" class="btn btn-success btn-sm"
                               ng-disabled="loginForm.$invalid" />
</form>

            </div>
        </div>
    </div>
</div>
