<html class="no-js">
<!--<![endif]-->
<head>
    <title>Gift Card Store</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/owl.theme.css" rel="stylesheet" />
     @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak],
        .ng-cloak, .x-ng-cloak,
        .ng-hide {
            display: none !important;
        }
    </style>
</head>
<body data-ng-app="main" data-ng-controller="RootController">
    @{
        if (!User.Identity.IsAuthenticated)
        {

            @Html.Partial("_LoginPartial")
        }
        else
        {
            <div id="wrapper">
                <div class="overlay"></div>
                <!-- Sidebar -->
                <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
                    <ul class="nav sidebar-nav">
                        <li class="sidebar-brand">
                            <a href="#">
                                Gift card
                            </a>
                        </li>

                        <li data-ng-class="{active : activeViewPath==='/home'}">
                            <a href='#/home'>Home</a>
                            </li>

                        <li data-ng-class="{active : activeViewPath==='/report'}">
                            <a href="#/report">Wacth report</a>
                        </li>
                        <li data-ng-class="{active : activeViewPath==='/Contact'}">
                            <a href="#/Contact">Contact</a>
                        </li>
                        <li>
                            <a href='@Url.Action("LogOut")'>Log out</a>
                        </li>

                    </ul>

                </nav>
                <!-- /#sidebar-wrapper -->
                <!-- Page Content -->
                <div id="page-content-wrapper">
                    <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
                        <span class="hamb-top"></span>
                        <span class="hamb-middle"></span>
                        <span class="hamb-bottom"></span>
                    </button>
                </div>
                <!-- /#page-content-wrapper -->

            </div>
        }
    }

    <div class="container">
        @RenderBody()
    </div>
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/owl.carousel.js"></script>
   
    <script src="~/Scripts/printThis.js"></script>
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")
    <script src="~/Scripts/menuBar.js"></script>
    <link href="~/Content/menuBar.css" rel="stylesheet" />
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-google-chart/0.0.11/ng-google-chart.js" type="text/javascript"></script>
    <link href="~/Content/ReportStyle.css" rel="stylesheet" />
   
     @RenderSection("scripts", required: false)
</body>
</html>
