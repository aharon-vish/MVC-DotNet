<header style="opacity:0.8">

    <nav id="beforeLog" class="navbar navbar-default bottom" role="navigation" style="background-color:black">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse " style="background-color:black; overflow-x: hidden;">
            <ul class="nav navbar-nav" style="width:100%">
                <li>
                    <a class="c1 " href="@Url.Action("Index", "Home")">
                        <span>Home</span>
                    </a>
                </li>

                <li>
                    <a class="c3" href="@Url.Action("Help", "Home")">
                        <span style="align-content:center">Help</span>
                    </a>

                </li>
                <li>
                    <a class="c4" href="@Url.Action("ContactUs", "Home")">
                        <span>☎</span>
                    </a>
                </li>
                <li style="width:250px;height:70px;border:none;">
                  @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "navbar-form", @style = "padding-top:23.5px; border:none;" }))
                  { 
                  
                        <div class="input-group">
                            <input type="text" class="form-control" name="search" placeholder="Search store..." style="border-radius:25px;border:none;color:black;background-color:gray;font-weight: bold;">
                            <span class="input-group-btn">
                                <button type="submit" style="border:none;border-radius:25px;color:black;background-color:gray;font-weight: bold;">
                                    <span class="glyphicon glyphicon-search" style="color:white;opacity:1.5;">
                                        <span class="sr-only" style="color:black">Search</span>
                                    </span>
                                </button>
                            </span>
                        </div>
                  
                  }
                </li>
              
                <li class="navbar-right pull-right" style="width:150px;height:70px;padding-top:-50%">
                    <div class="container" style="width:150px;height:70px;">
                        <div class="col-md-6" style="width:150px;height:30px;">
                            <a href="@Url.Action("Login", "Account")" style="width:150px;height:0px;padding-top:30px" >
                                <span class="glyphicon glyphicon-log-in" id="log_in" style="width:150px;height:30px;padding-top:0" data-toggle="tooltip" data-placement="top" title="Click to log in..."></span>
                            </a>                     
                        </div>
                    </div>

                </li>
            </ul>
        </div>



    </nav>
    
    <!--if user are log in display this-->

    <nav id="afterLog" class="navbar navbar-default bottom" role="navigation" style="background-color:black;display:none">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse " style="background-color:black; overflow-x: hidden;float: left !important;">
            <ul class="nav navbar-nav" style="width:100%">
                <li>
                    <a class="c1 " href="@Url.Action("Index", "Home")">
                        <span>Home</span>
                    </a>
                </li>
                <li>
                    <a class="c2" href="@Url.Action("GiftBox", "Home")">
                        <span>Gift Box</span>
                    </a>
                </li>
                <li>
                    <a class="c3" href="@Url.Action("Help", "Home")">
                        <span style="align-content:center">Help</span>
                    </a>

                </li>
                <li>
                    <a class="c4" href="@Url.Action("ContactUs", "Home") ">                        
                        <span>☎</span>
                    </a>
                </li>
                <li style="width:250px;height:70px;border:none;">
                    @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "navbar-form", @style = "padding-top:23.5px; border:none;" }))
                    {
                       
                        <div class="input-group">
                            <input type="text" class="form-control" name="search" placeholder="Search store..." style="border-radius:25px;border:none;color:black;background-color:gray;font-weight: bold;">
                            <span class="input-group-btn">
                                <button type="submit" style="border:none;border-radius:25px;color:black;background-color:gray;font-weight: bold;">
                                    <span class="glyphicon glyphicon-search" style="color:white;opacity:1.5;">
                                        <span class="sr-only" style="color:black">Search</span>
                                    </span>
                                </button>
                            </span>
                        </div>
                      
                    }
                </li>

                <li class="navbar-right pull-right" style="width:150px;height:70px;padding-top:-50%">
                   
                    <div class="container" style="width:150px;height:70px;">

                        <div class="col-md-6" style="width:150px;height:30px;opacity:1">
                            <b><a href="@Url.Action("UserAccount", "Account")" id="User_Name" data-toggle="tooltip" data-placement="bottom" style="width:150px;height:30px;font-weight: bold;opacity:1" title="Click to your account"></a></b>
                        </div>
                        <div class="col-md-6" style="width:150px;height:30px;">
                            <a href="@Url.Action("Logoff", "Account")" style="width:150px;height:0px;padding-top:0">
                                <span class="glyphicon glyphicon-log-out" id="log_out" style="width:150px;height:30px;padding-top:0;" data-toggle="tooltip" data-placement="top" title="Click to log out..."></span>
                            </a>
                        </div>
                    </div>

                </li>
            </ul>



        </div>
    </nav>

</header>

<html>
<body>
    @RenderBody()
</body>
</html>

<footer style="rest-after:strong">
