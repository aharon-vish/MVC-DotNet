    </div>
</footer>
<script src="~/Content/assets/bootstrap/js/bootstrap.js" type="text/javascript"></script>

 <script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        var IsAuthenticated = '@Request.IsAuthenticated';
       
        if (IsAuthenticated === 'False')
        {         
            $("#afterLog").css("display", "none");
            $("#beforeLog").css("display", "block");
        }
        else {
            $("#afterLog").css("display", "block");
            $("#beforeLog").css("display", "none");
            $("#User_Name").append("Hi you");
        }

    });
</script>

















